<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.physphil.android.remindme.ui.ReminderEntryField
            android:id="@+id/reminder_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/global_margin_xlarge"
            android:layout_marginStart="@dimen/global_margin_large"
            android:layout_marginTop="@dimen/global_margin_xlarge"
            app:field_icon="@drawable/ic_notifications_24dp"
            app:field_title="@string/reminder_title_title"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.physphil.android.remindme.ui.ReminderEntryField
            android:id="@+id/reminder_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/global_margin_xlarge"
            android:layout_marginStart="@dimen/global_margin_large"
            android:layout_marginTop="@dimen/global_margin_xlarge"
            app:field_icon="@drawable/ic_view_headline_24dp"
            app:field_title="@string/reminder_body_title"/>

        <com.physphil.android.remindme.ui.ReminderEntryButton
            android:id="@+id/reminder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/global_margin_large"
            android:layout_marginStart="@dimen/global_margin_large"
            android:layout_marginTop="@dimen/global_margin_xxxlarge"
            app:button_icon="@drawable/ic_time_24dp"/>

        <com.physphil.android.remindme.ui.ReminderEntryButton
            android:id="@+id/reminder_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/global_margin_large"
            android:layout_marginStart="@dimen/global_margin_large"
            android:layout_marginTop="@dimen/global_margin_xxxlarge"
            app:button_icon="@drawable/ic_date_range_24dp"
            tools:button_text="Jan 26, 2018"/>

        <com.physphil.android.remindme.ui.ReminderEntryButton
            android:id="@+id/reminder_recurrence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/global_margin_xlarge"
            android:layout_marginEnd="@dimen/global_margin_xlarge"
            android:layout_marginStart="@dimen/global_margin_large"
            android:layout_marginTop="@dimen/global_margin_xxxlarge"
            app:button_icon="@drawable/ic_repeat_24dp"
            tools:button_text="Hourly"/>

    </LinearLayout>

</ScrollView>